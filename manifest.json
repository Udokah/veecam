{
  "name": "VeeCam",
  "description": "A virtual camera Chrome extension.",
  "version": "0.0.1",
  "minimum_chrome_version": "10.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "build/background.js"
  },
  "permissions": ["scripting"],
  "action": {
    "default_popup": "src/views/popup.html"
  },
  "options_page": "src/views/options.html",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["build/contentScript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/build/inject.js"],
      "matches": ["https://*/*"]
    }
  ]
}
